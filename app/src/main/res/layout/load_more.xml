<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadmore_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingBottom="12dp"
    android:paddingTop="12dp" >

    <ImageView
        android:id="@+id/loading_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:background="@drawable/loading"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/load_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/loading_eg"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_14" />

    <ProgressBar
        android:id="@+id/pull_to_refresh_progress"
        android:layout_width="@dimen/text_size_20"
        android:layout_height="@dimen/text_size_20"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_10"
        android:layout_toLeftOf="@+id/load_more"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/loading_rotate_gray"
        android:indeterminateOnly="true" />

</RelativeLayout>