<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rounded_h_white"
        android:minWidth="300dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_20">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version_text_1"
                    android:textColor="@color/black_3"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/dialog_version_tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_5"
                    android:text="v1.0"
                    android:textColor="@color/black_3"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/gray_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_10"
                android:text="@string/version_text_3"
                android:textColor="@color/black_3"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/dialog_version_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_10"
                android:text="@string/text_default"
                android:textColor="@color/black_3"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_version_btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/click_dialog_left"
                android:padding="@dimen/space_10"
                android:text="@string/main_cancel"
                android:textColor="@color/black_3"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_2" />

            <Button
                android:id="@+id/dialog_version_btn_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/click_dialog_right"
                android:padding="@dimen/space_10"
                android:text="@string/version_text_4"
                android:textColor="@color/black_3"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>