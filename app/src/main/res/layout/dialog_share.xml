<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_100"
        android:background="@drawable/shape_round_rect_black_tranlucent"
        android:paddingBottom="@dimen/space_20"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        android:paddingTop="@dimen/space_20"
        android:text="@string/share_text_2"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/dialog_share_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="220dp"
        android:textColor="@color/black_3"
        android:textSize="@dimen/text_size_14"
        android:lineSpacingExtra="@dimen/space_5"
        android:layout_marginLeft="-1000dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/dialog_share_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dialog_share_lay_1"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/space_20"
        android:background="@color/transparent" />


    <LinearLayout
        android:id="@+id/dialog_share_lay_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/share_text_1"
            android:textColor="@color/black_3"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/share_text_3"
            android:textColor="@color/black_3"
            android:textSize="@dimen/text_size_11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_share_img_wechat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="@dimen/space_10"
                android:src="@drawable/wechat_green" />

            <ImageView
                android:id="@+id/dialog_share_img_wechat_friends"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="@dimen/space_10"
                android:src="@drawable/icon_wechat_friends" />

            <ImageView
                android:id="@+id/dialog_share_img_qq"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="@dimen/space_10"
                android:src="@drawable/icon_qq2" />

            <ImageView
                android:id="@+id/dialog_share_img_qqzone"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="@dimen/space_10"
                android:src="@drawable/icon_qqzone" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_2" />

        <Button
            android:id="@+id/dialog_share_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_transparent"
            android:padding="@dimen/space_10"
            android:text="@string/main_cancel"
            android:textColor="@color/orange_3"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>
</RelativeLayout>