<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/listitem_news_lay_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_3"
        android:padding="@dimen/space_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/listitem_news_tv_time_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_5"
            android:text="@string/text_default"
            android:textColor="@color/black_3"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listitem_news_lay_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_20">

            <ImageView
                android:id="@+id/listitem_news_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/gray_2" />

            <ImageView
                android:id="@+id/listitem_news_point"
                android:layout_width="@dimen/space_7"
                android:layout_height="@dimen/space_7"
                android:layout_marginTop="@dimen/space_30"
                android:background="@drawable/circle_orange" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_7"
            android:layout_marginTop="@dimen/space_25"
            android:orientation="vertical"
            android:paddingRight="@dimen/space_15">

            <TextView
                android:id="@+id/listitem_news_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_box_gray"
                android:gravity="center"
                android:text="@string/text_default"
                android:textColor="@color/black_3"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/listitem_news_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginTop="@dimen/space_5"
                android:maxLines="5"
                android:text="@string/text_default"
                android:textColor="@color/black_3"
                android:textSize="@dimen/text_size_13"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/listitem_news_lay_countdown"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingLeft="@dimen/space_20"
                    android:paddingTop="@dimen/space_10">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/icon_hourglass" />

                    <TextView
                        android:id="@+id/listitem_news_tv_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5"
                        android:text="@string/text_default"
                        android:textColor="@color/black_3"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/listitem_news_lay_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingLeft="@dimen/space_20"
                    android:paddingTop="@dimen/space_10">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/icon_share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/listitem_news_tv_share"
                        android:layout_marginLeft="@dimen/space_5"
                        android:text="@string/main_text_4"
                        android:textColor="@color/black_3"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

