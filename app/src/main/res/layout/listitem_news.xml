<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/listitem_news_lay_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_3"
        android:visibility="gone"
        android:padding="@dimen/space_10">

        <TextView
            android:id="@+id/listitem_news_tv_time_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_5"
            android:text="@string/text_default"
            android:textColor="@color/black_3"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listitem_news_lay_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/click_transparent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_20">

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/gray_2" />

            <ImageView
                android:layout_width="@dimen/space_7"
                android:layout_height="@dimen/space_7"
                android:layout_marginTop="@dimen/space_30"
                android:background="@drawable/circle_orange" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_7"
            android:layout_marginTop="@dimen/space_25"
            android:orientation="vertical"
            android:paddingRight="@dimen/space_15">

            <TextView
                android:id="@+id/listitem_news_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_bg"
                android:gravity="center"
                android:text="11:18"
                android:textColor="@color/black_3"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/listitem_news_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginTop="@dimen/space_5"
                android:text="李俊姝都梗iuwoej王嘉尔佛文件佛山鸡王嘉尔佛文件佛山鸡王嘉尔佛文件佛山鸡皮肤我破解"
                android:textColor="@color/black_3"
                android:textSize="@dimen/text_size_13" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingLeft="@dimen/space_20"
                    android:paddingTop="@dimen/space_10">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/default_head" />

                    <TextView
                        android:id="@+id/listitem_news_tv_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5"
                        android:text="12:20:78"
                        android:textColor="@color/black_3"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/listitem_news_lay_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/click_transparent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingLeft="@dimen/space_20"
                    android:paddingTop="@dimen/space_10">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/default_head" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5"
                        android:text="@string/main_text_4"
                        android:textColor="@color/black_3"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

