<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_rounded_h_white"
        android:orientation="vertical"
        android:padding="@dimen/space_20">

        <TextView
            android:id="@+id/dialog_edtinfo_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/dialog_edtinfo_edt"
            android:layout_width="wrap_content"
            android:minWidth="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/shape_round_stroke_h_white_black"
            android:hint="请输入内容"
            android:padding="@dimen/space_10"
            android:textSize="@dimen/space_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_editinfo_tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="@string/main_cancel"
                android:textColor="@drawable/click_text_color_black_3"
                android:textSize="@dimen/space_16" />

            <TextView
                android:id="@+id/dialog_editinfo_tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="@string/sure"
                android:textColor="@drawable/click_text_color_main_skyblue"
                android:textSize="@dimen/space_16" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>