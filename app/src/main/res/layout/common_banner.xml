<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/banner_height"
    android:background="#000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/umeng_banner_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:gravity="center"
        android:singleLine="true"
        android:text="标题"
        android:textColor="#fff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/umeng_banner_img_left"
        android:layout_width="@dimen/banner_height"
        android:layout_height="@dimen/banner_height"
        android:padding="10dp"
        android:src="@drawable/click_btn_banner_back_white" />

    <LinearLayout
        android:id="@+id/umeng_banner_lay_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/banner_height"
            android:layout_height="@dimen/banner_height"
            android:layout_marginRight="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/umeng_banner_img_right_3"
                android:layout_width="@dimen/banner_height"
                android:layout_height="@dimen/banner_height"
                android:padding="12dp"
                android:src="@drawable/umeng_arrow_left_gray"
                android:visibility="gone" />

            <TextView
                android:id="@+id/umeng_banner_img_right_3_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/umeng_banner_lay_right_2"
            android:layout_width="@dimen/banner_height"
            android:layout_height="@dimen/banner_height"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/umeng_banner_lay_right_1"
            android:visibility="gone">

            <ImageView
                android:id="@+id/umeng_banner_img_right_2"
                android:layout_width="@dimen/banner_height"
                android:layout_height="@dimen/banner_height"
                android:padding="12dp"
                android:src="@drawable/umeng_arrow_left_gray"
                android:visibility="gone" />

            <TextView
                android:id="@+id/umeng_banner_img_right_2_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/umeng_banner_lay_right_1"
            android:layout_width="@dimen/banner_height"
            android:layout_height="@dimen/banner_height"
            android:layout_marginRight="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/umeng_banner_img_right_1"
                android:layout_width="@dimen/banner_height"
                android:layout_height="@dimen/banner_height"
                android:padding="12dp"
                android:src="@drawable/umeng_arrow_left_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/umeng_banner_img_right_1_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/umeng_banner_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/banner_height"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="上传"
            android:textColor="@drawable/click_text_color_white"
            android:textSize="15sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/umeng_banner_lay_right_menu"
            android:layout_width="@dimen/banner_height"
            android:layout_height="@dimen/banner_height"
            android:layout_marginRight="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/umeng_banner_img_right_menu"
                android:layout_width="@dimen/banner_height"
                android:layout_height="@dimen/banner_height"
                android:padding="12dp"
                android:src="@drawable/banner_menu_white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/umeng_banner_img_right_menu_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>