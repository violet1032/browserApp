<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_skyblue"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:id="@+id/act_change_password_bg"
    tools:context="com.zp.browser.ui.ChangePasswordActivity">

    <include
        layout="@layout/common_banner"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/act_change_password_bg_1"
        android:background="@color/gray_3"
        android:padding="@dimen/space_20"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/act_change_password_lay_password"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/shape_rounded_h_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/act_change_password_img_password"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/password_2" />

            <EditText
                android:id="@+id/act_change_password_edt_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:hint="@string/change_password_text_2"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/space_10"
                android:textColor="@color/black_3"
                android:textColorHint="@color/gray_2"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/act_change_password_lay_newpassword"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/shape_rounded_h_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/act_change_password_img_newpassword"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/password_2" />

            <EditText
                android:id="@+id/act_change_password_edt_newpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:hint="@string/change_password_text_3"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/space_10"
                android:textColor="@color/black_3"
                android:textColorHint="@color/gray_2"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/act_change_password_lay_repassword"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/shape_rounded_h_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/act_change_password_img_repassword"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/password_2" />

            <EditText
                android:id="@+id/act_change_password_edt_repassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:hint="@string/change_password_text_4"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/space_10"
                android:textColor="@color/black_3"
                android:textColorHint="@color/gray_2"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <Button
            android:id="@+id/act_change_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/click_btn_round_h_skyblue_3"
            android:padding="@dimen/space_10"
            android:text="@string/change_password_text_5"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>
</LinearLayout>
